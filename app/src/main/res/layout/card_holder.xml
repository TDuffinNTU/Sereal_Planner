<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/src"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="Headline"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/deleteFAB"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/deleteFAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="?colorPrimary"
                android:clickable="true"
                app:fabSize="mini"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:text="Time"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardTitle" />

            <TextView
                android:id="@+id/cardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="8:00 AM"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:text="Alarm"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardTitle" />

            <TextView
                android:id="@+id/cardAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                android:includeFontPadding="false"
                android:text="True"
                android:textAlignment="textEnd"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginTop="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"

                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/cardTime">

                <CheckBox
                    android:id="@+id/monday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"

                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:checked="false"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="M"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/tuesday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/wednesday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="W"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/thursday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/friday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/saturday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <CheckBox
                    android:id="@+id/sunday"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_btn"
                    android:button="@drawable/round_btn"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/noteHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:minHeight="80dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/noteTitle"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:inputType="text"
                        android:maxLength="30"
                        android:text="Headline"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView

                        android:id="@+id/noteContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="top"
                        android:importantForAutofill="no"

                        android:minHeight="80dp"
                        android:text="Body Text \n(minimum 80dp)"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/noteTitle" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>