<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">?colorPrimaryVariant</item>

        <!-- custom attributes -->
        <item name="headerCol">?colorPrimary</item>
        <item name="switchCompatTextCol">@color/black</item>
        <item name="textOnPrimaryCol">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="Theme.DarkTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">?colorPrimaryVariant</item>

        <!-- custom attributes -->
        <item name="headerCol">?colorPrimary</item>
        <item name="switchCompatTextCol">@color/white</item>
        <item name="textOnPrimaryCol">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Dyslexic font for light dark themes-->
    <style name="DyslexicLight" parent="Theme.LightTheme">
        <item name="android:fontFamily">@font/odys_family_regular</item>
    </style>

    <style name="DyslexicDark" parent="Theme.DarkTheme">
        <item name="android:fontFamily">@font/odys_family_regular</item>
    </style>

    <style name="warnButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
    </style>







</resources>